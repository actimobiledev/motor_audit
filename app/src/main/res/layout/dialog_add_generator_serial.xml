<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlAddGeneratorSerial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/layout_border_blue"
        android:visibility="visible">
        <!-- Generator Information Layout Header -->
        <RelativeLayout
            android:id="@+id/rl25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_blue">
            <TextView
                android:id="@+id/tvSerialHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="ADD NEW SERIAL"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_medium"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llAddGeneratorSerial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl25"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvSerialId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serial ID"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/etSerialId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/layout_edittext"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serial"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etSerial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_edittext"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="@dimen/text_size_medium"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Model"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
            />
            <EditText
                android:id="@+id/etModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_edittext"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="@dimen/text_size_medium"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Manufacturer"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
            />
            <Spinner
                android:id="@+id/spManufacturer"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:spinnerMode="dialog"/>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:weightSum="2.0">
                <TextView
                    android:id="@+id/tvCancelSerial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/background_button_red"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:paddingRight="5dp"
                    android:text="CANCEL"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvAddSerial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/background_button_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingRight="5dp"
                    android:text="ADD"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>

